<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ecomm Store</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: {
                            50: '#f0f9ff',
                            100: '#e0f2fe',
                            200: '#bae6fd',
                            300: '#7dd3fc',
                            400: '#38bdf8',
                            500: '#0ea5e9',
                            600: '#0284c7',
                            700: '#0369a1',
                            800: '#075985',
                            900: '#0c4a6e'
                        }
                    }
                }
            }
        }
    </script>
</head>
<body class="bg-gray-50 flex flex-col min-h-screen">
    <header class="bg-white shadow-sm sticky top-0 z-50">
        <nav class="container mx-auto px-4 py-4">
            <div class="flex justify-between items-center">
                <div class="flex items-center space-x-16">
                    <a asp-controller="Home" asp-action="Index" class="text-2xl font-bold text-primary-600 hover:text-primary-700 transition-colors">
                        <i class="fas fa-shopping-bag mr-2"></i>Ecomm Store
                    </a>
                    <div class="hidden md:flex items-center space-x-8">
                        <a asp-controller="Home" asp-action="Index" class="text-gray-600 hover:text-primary-600 transition-colors">Home</a>
                        <a asp-controller="Products" asp-action="Index" class="text-gray-600 hover:text-primary-600 transition-colors">Products</a>
                        <a href="#featured" class="text-gray-600 hover:text-primary-600 transition-colors">Featured</a>
                        <a href="#categories" class="text-gray-600 hover:text-primary-600 transition-colors">Categories</a>
                        <a href="#about" class="text-gray-600 hover:text-primary-600 transition-colors">About</a>
                    </div>
                </div>
                <div class="flex items-center space-x-6">
                    <div class="relative">
                        <input type="text" 
                               placeholder="Search products..." 
                               class="w-48 lg:w-64 pl-10 pr-4 py-2 rounded-full border border-gray-300 focus:outline-none focus:border-primary-500 focus:ring-1 focus:ring-primary-500">
                        <i class="fas fa-search absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                    </div>
                    <a asp-controller="Wishlist" asp-action="Index" class="text-gray-600 hover:text-primary-600 relative group">
                        <i class="fas fa-heart text-xl"></i>
                        <span id="wishlist-count" class="absolute -top-2 -right-2 bg-red-500 text-white text-xs rounded-full h-5 w-5 flex items-center justify-center group-hover:bg-red-600 transition-colors">0</span>
                        <span class="sr-only">Wishlist</span>
                    </a>
                    <a asp-controller="Cart" asp-action="Index" class="text-gray-600 hover:text-primary-600 relative group">
                        <i class="fas fa-shopping-cart text-xl"></i>
                        <span id="cart-count" class="absolute -top-2 -right-2 bg-primary-500 text-white text-xs rounded-full h-5 w-5 flex items-center justify-center group-hover:bg-primary-600 transition-colors">0</span>
                        <span class="sr-only">Cart</span>
                    </a>
                </div>
            </div>
        </nav>
    </header>

    <main class="flex-grow">
        @RenderBody()
    </main>

    <footer class="bg-gray-900 text-white mt-16">
        <div class="container mx-auto px-4 py-12">
            <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
                <div class="space-y-4">
                    <h3 class="text-lg font-semibold">About Us</h3>
                    <p class="text-gray-400">Your one-stop shop for quality products at great prices. We believe in providing the best shopping experience for our customers.</p>
                </div>
                <div class="space-y-4">
                    <h3 class="text-lg font-semibold">Quick Links</h3>
                    <ul class="space-y-2">
                        <li><a href="#" class="text-gray-400 hover:text-white transition-colors">Shop</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-white transition-colors">Categories</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-white transition-colors">New Arrivals</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-white transition-colors">Special Offers</a></li>
                    </ul>
                </div>
                <div class="space-y-4">
                    <h3 class="text-lg font-semibold">Customer Service</h3>
                    <ul class="space-y-2">
                        <li><a href="#" class="text-gray-400 hover:text-white transition-colors">Contact Us</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-white transition-colors">FAQs</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-white transition-colors">Shipping Info</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-white transition-colors">Returns</a></li>
                    </ul>
                </div>
                <div class="space-y-4">
                    <h3 class="text-lg font-semibold">Newsletter</h3>
                    <p class="text-gray-400">Subscribe to receive updates, access to exclusive deals, and more.</p>
                    <form class="flex">
                        <input type="email" placeholder="Enter your email" class="flex-1 px-4 py-2 rounded-l-lg focus:outline-none focus:ring-1 focus:ring-primary-500">
                        <button type="submit" class="bg-primary-500 hover:bg-primary-600 text-white px-4 py-2 rounded-r-lg transition-colors">
                            Subscribe
                        </button>
                    </form>
                    <div class="flex space-x-4 pt-4">
                        <a href="#" class="text-gray-400 hover:text-white transition-colors"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="text-gray-400 hover:text-white transition-colors"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="text-gray-400 hover:text-white transition-colors"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="text-gray-400 hover:text-white transition-colors"><i class="fab fa-pinterest"></i></a>
                    </div>
                </div>
            </div>
            <div class="border-t border-gray-800 mt-12 pt-8 text-center text-gray-400">
                <p>&copy; 2024 Ecomm Store. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <!-- Toast Notifications -->
    <div id="toastContainer" class="fixed bottom-4 right-4 z-50"></div>

    @await RenderSectionAsync("Scripts", required: false)

    <script>
        // Function to update cart count
        function updateCartCount() {
            fetch('/Cart/GetCartCount')
                .then(response => response.json())
                .then(data => {
                    const cartCount = document.getElementById('cart-count');
                    cartCount.textContent = data.count;
                    cartCount.style.display = data.count > 0 ? 'flex' : 'none';
                })
                .catch(error => console.error('Error:', error));
        }

        // Function to update wishlist count
        function updateWishlistCount() {
            fetch('/Wishlist/GetWishlistCount')
                .then(response => response.json())
                .then(data => {
                    const wishlistCount = document.getElementById('wishlist-count');
                    wishlistCount.textContent = data.count;
                    wishlistCount.style.display = data.count > 0 ? 'flex' : 'none';
                })
                .catch(error => console.error('Error:', error));
        }

        // Update counts on page load
        document.addEventListener('DOMContentLoaded', () => {
            updateCartCount();
            updateWishlistCount();
        });

        // Update counts after adding items (called from product pages)
        window.updateCartCountAfterAdd = updateCartCount;
        window.updateWishlistCountAfterAdd = updateWishlistCount;

        function showToast(message, type = 'success') {
            const container = document.getElementById('toastContainer');
            const toast = document.createElement('div');
            
            const bgColor = type === 'success' ? 'bg-green-500' : 'bg-red-500';
            const icon = type === 'success' ? 'fa-check-circle' : 'fa-exclamation-circle';
            
            toast.className = `${bgColor} text-white px-6 py-4 rounded-lg shadow-lg mb-3 flex items-center`;
            toast.innerHTML = `
                <i class="fas ${icon} mr-3"></i>
                <span>${message}</span>
            `;
            
            container.appendChild(toast);
            
            // Remove toast after 3 seconds
            setTimeout(() => {
                toast.classList.add('opacity-0', 'transition-opacity');
                setTimeout(() => toast.remove(), 300);
            }, 3000);
        }
    </script>
</body>
</html>
